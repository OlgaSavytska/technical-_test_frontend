wers}\n    },\n\n    watch:{\n        result(val){\n            if (typeof val === \"number\"){\n                this.answerResult.isTrue = this.answerResult.isTrue === val\n                console.log(\"WWWW\", this.answerResult, val)\n                this.$emit('result', this.answerResult)\n            }\n        },\n\n        showAnswers(){\n            this.isCorrect = this.answerResult.resultAnswer === this.result\n        }\n    }\n}\n</script>\n\n<style lang=\"scss\">\n    .vs-checkbox .vs-icon-check span .line1 {\n        width: 5px !important;\n    }\n\n    .vs-radio-content{\n        justify-content: flex-start !important;\n\n        label{\n            text-align: start;\n        }\n    }\n\n    .correct-answer{\n        background: green;\n        color: white;\n        width: max-content;\n        border-radius: 20px;\n    }\n\n    .vs-radio-content{\n        padding: 5px;\n    } \n</style>"],"mappings":"AAgBA;EACAA,IAAA;EAEAC,KAAA;IACAC,OAAA;MACAC,IAAA,EAAAC,MAAA;MACAC,OAAA,EAAAA,CAAA;IACA;IAEAC,WAAA;MACAH,IAAA,EAAAI,OAAA;MACAF,OAAA;IACA;EACA;EAEAG,KAAA;IACA;MACAC,YAAA;MACAC,MAAA;MACAC,SAAA;IACA;EACA;EAEAC,QAAA;IACA,KAAAH,YAAA;MAAA,QAAAP;IAAA;EACA;EAEAW,KAAA;IACAH,OAAAI,GAAA;MACA,WAAAA,GAAA;QACA,KAAAL,YAAA,CAAAM,MAAA,QAAAN,YAAA,CAAAM,MAAA,KAAAD,GAAA;QACAE,OAAA,CAAAC,GAAA,cAAAR,YAAA,EAAAK,GAAA;QACA,KAAAI,KAAA,gBAAAT,YAAA;MACA;IACA;IAEAH,YAAA;MACA,KAAAK,SAAA,QAAAF,YAAA,CAAAU,YAAA,UAAAT,MAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}